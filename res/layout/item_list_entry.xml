<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/itemId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
         android:visibility="gone" />

    <TextView
        android:id="@+id/textItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itemId"
        android:layout_alignBottom="@+id/itemId"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/itemId"
         android:textColor="#444444"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textItem"
        android:layout_alignBottom="@+id/textItem"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/textItem"
         android:textColor="#444444"
        android:textSize="20sp"
        android:textStyle="bold"  />
  
</RelativeLayout>
